@page
@model GenerationTask.Pages.Files.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GeneratedPdf[0].FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeneratedPdf[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeneratedPdf[0].PdfFile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeneratedPdf[0].CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.GeneratedPdf) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>

            <td>
                    <a href="@Url.Content("~/pdf/" + item.FileName)" target="_blank">View PDF</a>
                </td>


            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
